<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingTop="5dp" >

    <TextView
        android:id="@+id/tv_scenic_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/text_default"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/layout_scenic_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/tv_scenic_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp" >

        <ImageView
            android:id="@+id/iv_scenic_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tv_sort_number"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_list_sort_bg"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/layout_scenic_icon"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/layout_scenic_icon"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_comment_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="@color/text_default"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_scenic_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="@color/text_default"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_scenic_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxEms="12"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/text_default"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>